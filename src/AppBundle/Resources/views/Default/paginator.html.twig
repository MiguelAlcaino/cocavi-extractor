<nav aria-label="Page navigation">
    <ul class="pagination">
        <li>
            <a href="{{ path('homepage') }}" aria-label="First">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        {% for page in pages %}
            <li class="{% if currentPage == page %}active{% endif %}">
                <a href="{{ path('homepage', { page: page}) }}">{{ page }}</a>
            </li>
        {% endfor %}
        {% if lastPage is defined %}
            <li>
                <a href="{{ path('homepage', {page: lastPage}) }}" aria-label="Last">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>